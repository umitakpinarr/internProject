@model AppliesViewModel
@{ Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["CmsTitle"] = "Başvuru Detayı"; }
<div class="row">
    <div class="col-xl-4 col-lg-5">
        <div class="card text-center">
            <div class="card-body">
                <div class="text-start mt-3">
                    <p class="mb-2 font-13">
                        <strong>Adı Soyadı :</strong> <span class="ms-2">
                            @Model.FullName
                        </span>
                    </p>

                    <p class="mb-2 font-13">
                        <strong>Telefon :</strong><span class="ms-2">
                            @Model.Phone
                        </span>
                    </p>

                    <p class="mb-2 font-13">
                        <strong>Email :</strong><span class="ms-2">
                            @Model.Email
                        </span>
                    </p>

                    <p class="mb-2 font-13">
                        <strong>Cinsiyet :</strong><span class="ms-2">
                            @Model.Gender
                        </span>
                    </p>

                    <p class="mb-2 font-13">
                        <strong>Üniversite :</strong><span class="ms-2">
                            @Model.University
                        </span>
                    </p>

                    <p class="mb-2 font-13">
                        <strong>Bölüm :</strong><span class="ms-2">
                            @Model.Faculty
                        </span>
                    </p>
                    <p class="mb-2 font-13">
                        <strong>Başvuru Tarihi :</strong><span class="ms-2">
                            @(((DateTime)Model.CreatedAt).ToString("dd-MM-yyyy"))
                        </span>
                    </p>
                    <p class="mb-2 font-13">
                        <strong>Başvurulan İlan :</strong><span class="ms-2">
                            <a href="/jobdetail/index/@Model.JobSlug">@Model.JobTitle</a>
                        </span>
                    </p>
                    @if (Model.IsIntern == "1")
                    {
                <p class="mb-2 font-13">
                    <strong>Staj Başlangıç Tarihi :</strong><span class="ms-2">
                        @(((DateTime)Model.InternStartDate).ToString("dd-MM-yyyy"))
                    </span>
                </p>
                                <p class="mb-2 font-13">
                                    <strong>Staj Bitiş Tarihi :</strong><span class="ms-2">
                                        @(((DateTime)Model.InternEndDate).ToString("dd-MM-yyyy"))
                                    </span>
                                </p>
                                                <p class="mb-2 font-13">
                                                    <strong>Belgeleri Tam Mı ? :</strong><span class="ms-2">
                                                        @(Model.IsDocsDone == 1 ? "Evet" : "Hayır")
                                                    </span>
                                                </p>
                                                                <p class="mb-2 font-13">
                                                                    <strong>İstihdam Edildi Mi ? :</strong><span class="ms-2">
                                                                        @(Model.IsHired == 1 ? "Evet" : "Hayır")
                                                                    </span>
                                                                </p>
                                                                <p class="mb-2 font-13">
                                                                    <strong>Kalan Gün ? :</strong><span class="ms-2">
                                                                        @Model.RemainingTime
                                                                    </span>
                                                                </p>
                                                                }
                    <hr />
                    <h4 class="header-title mt-0 mb-3">Ön Yazı :</h4>
                    <p class="text-muted font-13">
                        @Model.Resume
                    </p>

                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card -->

    </div> <!-- end col-->

    <div class="col-xl-8 col-lg-7">
        <div class="card">
            <div class="card-body" style="height:800px;">
                @if (Model.IsIntern == "1")
                {
            <iframe src="/uploads/cv/intern/@Model.CvPath" frameborder="0" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" height="100%" width="100%"></iframe> }
        else if (Model.JobSlug != null)
        {
            <iframe src="/uploads/cv/applicant/@Model.CvPath" frameborder="0" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" height="100%" width="100%"></iframe>}
        else
        {
            <iframe src="/uploads/cv/job/@Model.CvPath" frameborder="0" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" height="100%" width="100%"></iframe>
                        }
            </div> <!-- end card body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div>