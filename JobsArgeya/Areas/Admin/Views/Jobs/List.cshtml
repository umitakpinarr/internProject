@model List<JobsViewModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["CmsTitle"] = "İlan Listesi";
}
@section Styles {
    <link href="~/panel/assets/css/vendor/dataTables.bootstrap5.css" rel="stylesheet" type="text/css" />
    <link href="~/panel/assets/css/vendor/responsive.bootstrap5.css" rel="stylesheet" type="text/css" />
}
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <table id="example" class="table dt-responsive nowrap w-100" width="100%">
                <thead>
                    <tr>
                        <th>İlan Başlık</th>
                        <th>İlan Anahtar Kelime</th>
                        <th>İlan Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (JobsViewModel Jobs in Model)
                    {
                                        <tr>
                                            <td>@Jobs.JobTitle</td>
                                            <td>@Jobs.JobKeywords</td>
                                            <td>@Jobs.JobDescription</td>
                                            <td><a href="/admin/jobs/edit/@(ViewData["CompanyRoute"] != null ? ViewData["CompanyRoute"]+"/" : "")@Jobs.Id" class="btn btn-primary">Düzenle</a> <a href="/admin/jobs/delete/@Jobs.Id" onclick="return confirm('İlgili kayıt silinsin mi ?');" class="btn btn-danger">Sil</a></td>
                                        </tr>}

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/panel/assets/js/vendor/jquery.dataTables.min.js"></script>
    <script src="~/panel/assets/js/vendor/dataTables.bootstrap5.js"></script>
    <script src="~/panel/assets/js/vendor/dataTables.responsive.min.js"></script>
    <script src="~/panel/assets/js/vendor/responsive.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}